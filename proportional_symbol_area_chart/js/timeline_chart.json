{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "background": "#f6f1ea",
    "config": {
        "view": {
            "stroke": null
        }
    },
    "title": {
        "text": "Yearly Distribution of Missions, by Theatre of Operation",
        "fontSize": 16,
        "offset": 20,
        "anchor": "middle"
    },
    "params": [
        {
            "name": "Year_selection",
            "value": 1945,
            "bind": {
                "input": "range",
                "min": 1939,
                "max": 1945,
                "step": 1,
                "name": "Year:  "
            }
        },
        {
            "name": "Zoom_level",
            "value": 250,
            "bind": {
                "input": "range",
                "min": 250,
                "max": 1500,
                "step": 250,
                "name": "Zoom:  "
            }
        },
        {
            "name": "Set_centre",
            "value": [
                90,
                70
            ],
            "bind": {
                "input": "select",
                "options": [
                    [
                        90,
                        70
                    ],
                    [
                        10,
                        60
                    ],
                    [
                        125,
                        25
                    ],
                    [
                        124,
                        42
                    ],
                    [
                        20,
                        35
                    ]
                ],
                "labels": [
                    "World",
                    "Europe",
                    "South-East Asia",
                    "North-East Asia",
                    "Africa"
                ],
                "name": "Region:  "
            }
        }
    ],
    "vconcat": [
        {
            "width": "container",
            "height": 500,
            "projection": {
                "type": "equalEarth",
                "center": {
                    "expr": "Set_centre"
                },
                "scale": {
                    "expr": "Zoom_level"
                }
            },
            "layer": [
                {
                    "data": {
                        "url": "proportional_symbol_area_chart/js/global_countries.topo.json",
                        "format": {
                            "type": "topojson",
                            "feature": "global_countries.topojson"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": "#d0c8b6",
                        "stroke": "white"
                    }
                },
                {
                    "data": {
                        "url": "proportional_symbol_area_chart/data/all_targets.csv"
                    },
                    "transform": [
                        {
                            "filter": "datum.Year == Year_selection"
                        }
                    ],
                    "encoding": {
                        "longitude": {
                            "field": "Target Longitude",
                            "type": "quantitative"
                        },
                        "latitude": {
                            "field": "Target Latitude",
                            "type": "quantitative"
                        },
                        "opacity": {
                            "condition": {
                                "param": "Set_theatre",
                                "value": 1
                            },
                            "value": 0
                        }
                    },
                    "layer": [
                        {
                            "params": [
                                {
                                    "name": "Set_theatre",
                                    "select": {
                                        "type": "point",
                                        "fields": [
                                            "Theater of Operations Full Name"
                                        ],
                                        "on": "click"
                                    },
                                    "bind": "legend"
                                }
                            ],
                            "mark": {
                                "type": "circle"
                            },
                            "encoding": {
                                "size": {
                                    "field": "Total Weight (Tons)",
                                    "title": "Total Explosives Weight (Tons)",
                                    "type": "quantitative",
                                    "scale": {
                                        "type": "threshold",
                                        "domain": [
                                            500,
                                            5000
                                        ],
                                        "range": [
                                            10,
                                            50,
                                            400
                                        ]
                                    },
                                    "legend": {
                                        "orient": "top",
                                        "padding": 20,
                                        "columns": 3
                                    }
                                },
                                "color": {
                                    "field": "Theater of Operations Full Name",
                                    "title": "Theatre of Operations",
                                    "type": "nominal",
                                    "scale": {
                                        "domain": [
                                            "China Burma India",
                                            "East Africa",
                                            "Europe",
                                            "Mediterranean",
                                            "Pacific"
                                        ],
                                        "range": [
                                            "#ad494a",
                                            "#5254a3",
                                            "#bd9e39",
                                            "#a55194",
                                            "#8ca252"
                                        ]
                                    },
                                    "legend": {
                                        "orient": "top",
                                        "padding": 20,
                                        "columns": 3
                                    }
                                },
                                "tooltip": [
                                    {
                                        "field": "Mission Date",
                                        "title": "Mission Date",
                                        "type": "temporal",
                                        "timeUnit": "yearmonthdate"
                                    },
                                    {
                                        "field": "Theater of Operations Full Name",
                                        "title": "Theatre of Operations",
                                        "type": "nominal"
                                    },
                                    {
                                        "field": "Target Country Formatted",
                                        "title": "Target",
                                        "type": "nominal"
                                    },
                                    {
                                        "field": "Target Longitude",
                                        "type": "quantitative",
                                        "format": ".2f"
                                    },
                                    {
                                        "field": "Target Latitude",
                                        "type": "quantitative",
                                        "format": ".2f"
                                    },
                                    {
                                        "field": "Total Weight (Tons)",
                                        "title": "Total Explosives Weight (Tons)",
                                        "type": "quantitative",
                                        "format": ","
                                    },
                                    {
                                        "field": "High Explosives Type",
                                        "title": "Explosives Type",
                                        "type": "nominal"
                                    },
                                    {
                                        "field": "Air Force",
                                        "type": "nominal"
                                    },
                                    {
                                        "field": "Aircraft Series",
                                        "type": "nominal"
                                    }
                                ]
                            }
                        },
                        {
                            "transform": [
                                {
                                    "filter": "datum['High Explosives Type'] == 'ATOMIC BOMB (FAT MAN)'"
                                }
                            ],
                            "mark": {
                                "type": "text",
                                "align": "left",
                                "dx": 20,
                                "dy": 10
                            },
                            "encoding": {
                                "text": {
                                    "value": [
                                        "August 9, 1945: ",
                                        "Atomic bomb (Fat Man)",
                                        "dropped on Nagasaki"
                                    ]
                                }
                            }
                        },
                        {
                            "transform": [
                                {
                                    "filter": "datum['High Explosives Type'] == 'ATOMIC BOMB (LITTLE BOY)'"
                                }
                            ],
                            "mark": {
                                "type": "text",
                                "align": "left",
                                "dx": -80,
                                "dy": -50
                            },
                            "encoding": {
                                "text": {
                                    "value": [
                                        "August 6, 1945: ",
                                        "Atomic bomb (Little Boy)",
                                        "dropped on Hiroshima"
                                    ]
                                }
                            }
                        },
                        {
                            "transform": [
                                {
                                    "filter": "datum['Mission ID'] == 27071 || datum['Mission ID'] == 155514 || datum['Mission ID'] == 63902"
                                }
                            ],
                            "mark": {
                                "type": "text",
                                "align": "left",
                                "dx": -140,
                                "dy": -20
                            },
                            "encoding": {
                                "text": {
                                    "value": [
                                        "May 5, 1943 - March 12, 1945: ",
                                        "22,242 tons of bombs",
                                        "dropped on Dortmund"
                                    ]
                                }
                            }
                        },
                        {
                            "transform": [
                                {
                                    "filter": "datum['Mission ID'] == 175568"
                                }
                            ],
                            "mark": {
                                "type": "text",
                                "align": "left",
                                "dx": 10,
                                "dy": -10
                            },
                            "encoding": {
                                "text": {
                                    "value": [
                                        "February 13-15, 1945: ",
                                        "800-bomber raid on",
                                        "the city of Dresden"
                                    ]
                                }
                            }
                        },
                        {
                            "transform": [
                                {
                                    "filter": "datum['Mission ID'] == 45601"
                                }
                            ],
                            "mark": {
                                "type": "text",
                                "align": "left",
                                "dx": -80,
                                "dy": -40
                            },
                            "encoding": {
                                "text": {
                                    "value": [
                                        "September 1939: ",
                                        "First raids began; RAF bombed",
                                        "German warships and light vessels"
                                    ]
                                }
                            }
                        }
                    ]
                }
            ]
        },
        {
            "width": "container",
            "height": 150,
            "data": {
                "url": "proportional_symbol_area_chart/data/all_targets.csv"
            },
            "transform": [
                {
                    "filter": "datum.Year == Year_selection"
                }
            ],
            "layer": [
                {
                    "params": [
                        {
                            "name": "Set_theatre",
                            "select": {
                                "type": "point",
                                "fields": [
                                    "Theater of Operations Full Name"
                                ],
                                "on": "mouseover"
                            },
                            "bind": "legend"
                        }
                    ],
                    "mark": {
                        "type": "area"
                    },
                    "encoding": {
                        "x": {
                            "timeUnit": "yearmonth",
                            "type": "temporal",
                            "field": "Mission Date",
                            "title": null,
                            "axis": {
                                "domain": false,
                                "format": "%b %Y",
                                "tickCount": 6
                            }
                        },
                        "y": {
                            "aggregate": "count",
                            "field": "Mission ID",
                            "title": null,
                            "axis": {
                                "orient": "right"
                            }
                        },
                        "detail": {
                            "field": "Theater of Operations Full Name",
                            "title": "Theatre of Operations"
                        },
                        "tooltip": [
                            {
                                "timeUnit": "yearmonth",
                                "type": "temporal",
                                "field": "Mission Date",
                                "title": "Month",
                                "format": "%b %Y"
                            },
                            {
                                "field": "Theater of Operations Full Name",
                                "title": "Theatre of Operations",
                                "type": "nominal"
                            },
                            {
                                "field": "__count",
                                "title": "Missions per Month",
                                "type": "quantitative",
                                "format": ","
                            }
                        ],
                        "color": {
                            "field": "Theater of Operations Full Name",
                            "title": "Theatre of Operations",
                            "scale": {
                                "domain": [
                                    "China Burma India",
                                    "East Africa",
                                    "Europe",
                                    "Mediterranean",
                                    "Pacific"
                                ],
                                "range": [
                                    "#ad494a",
                                    "#5254a3",
                                    "#bd9e39",
                                    "#a55194",
                                    "#8ca252"
                                ]
                            }
                        },
                        "opacity": {
                            "condition": {
                                "param": "Set_theatre",
                                "value": 1
                            },
                            "value": 0.2
                        }
                    }
                },
                {
                    "transform": [
                        {
                            "filter": "datum['Mission ID'] == 130190"
                        }
                    ],
                    "mark": {
                        "type": "text",
                        "align": "left",
                        "dx": 80,
                        "dy": 35
                    },
                    "encoding": {
                        "text": {
                            "value": [
                                "War ended on September 2, 1945"
                            ]
                        }
                    }
                },
                {
                    "transform": [
                        {
                            "filter": "datum['Mission ID'] == 45642 || datum['Mission ID'] == 45641 || datum['Mission ID'] == 113217"
                        }
                    ],
                    "mark": {
                        "type": "text",
                        "align": "left",
                        "dx": -380,
                        "dy": -60
                    },
                    "encoding": {
                        "text": {
                            "value": [
                                "Allied bombing was centred in Europe"
                            ]
                        }
                    }
                },
                {
                    "transform": [
                        {
                            "filter": "datum['Mission ID'] == 136971"
                        }
                    ],
                    "mark": {
                        "type": "text",
                        "align": "left",
                        "dx": -380,
                        "dy": -60
                    },
                    "encoding": {
                        "text": {
                            "value": [
                                "Following the Pearl Harbour", "attack on December 7, 1941", "war began in the Pacific"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}
